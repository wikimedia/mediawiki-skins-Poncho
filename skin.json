{
	"manifest_version": 2,
	"name": "Poncho",
	"version": "10.0",
	"author": "[https://mediawiki.org/wiki/User:Sophivorus Sophivorus]",
	"url": "https://www.mediawiki.org/wiki/Skin:Poncho",
	"descriptionmsg": "poncho-desc",
	"type": "skin",
	"license-name": "GPL-3.0-only",
	"requires": {
		"MediaWiki": ">= 1.39.0"
	},
	"MessagesDirs": {
		"Poncho": [
			"i18n"
		]
	},
	"ValidSkinNames": {
		"poncho": {
			"class": "SkinPoncho",
			"args": [
				{
					"name": "poncho",
					"bodyOnly": true,
					"responsive": true,
					"template": "PonchoTemplate",
					"styles": [
						"skins.poncho.styles",
						"oojs-ui.styles.icons-user",
						"oojs-ui.styles.icons-media",
						"oojs-ui.styles.icons-interactions",
						"oojs-ui.styles.icons-editing-core",
						"oojs-ui.styles.icons-editing-advanced"
					],
					"scripts": "skins.poncho.scripts"
				}
			]
		}
	},
	"AutoloadClasses": {
		"SkinPoncho": "Poncho.php",
		"PonchoTemplate": "Poncho.php"
	},
	"ResourceModules": {
		"skins.poncho.styles": {
			"styles": "Poncho.less",
			"targets": [
				"mobile",
				"desktop"
			]
		},
		"skins.poncho.scripts": {
			"scripts": "Poncho.js",
			"targets": [
				"mobile",
				"desktop"
			],
			"messages": [
				"poncho-enable-dark-mode",
				"poncho-disable-dark-mode",
				"poncho-enable-read-mode",
				"poncho-disable-read-mode",
				"poncho-copied",
				"poncho-translate",
				"poncho-stop-translating",
				"poncho-read-aloud",
				"poncho-pause-reading",
				"poncho-resume-reading"
			],
			"dependencies": [
				"mediawiki.api",
				"mediawiki.jqueryMsg",
				"oojs-ui-core",
				"oojs-ui-widgets",
				"oojs-ui-windows"
			]
		}
	},
	"ResourceFileModulePaths": {
		"localBasePath": "",
		"remoteSkinPath": "Poncho"
	},
	"Hooks": {
		"BeforePageDisplay": "PonchoTemplate::onBeforePageDisplay",
		"GetPreferences": "PonchoTemplate::onGetPreferences",
		"OutputPageBodyAttributes": "PonchoTemplate::onOutputPageBodyAttributes"
	}
}
